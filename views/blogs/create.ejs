<%- layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create new Blog</h3>
            <br>
            <form method="post" action="/blogs" class="needs-validation" novalidate>  
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" placeholder="enter title" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid title</div>
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Body</label>
                    <textarea required name="body" placeholder="enter body" class="form-control"></textarea>
                    <div class="invalid-feedback">Please enter valid body</div>
                </div>
                <button type="submit" class="btn add-btn btn-dark">Add</button>
                <br><br>
            </form>
        </div>
    </div>
</body>